@model Finanças_Pessoais.Models.Despesas
@{
    ViewBag.Title = "UpdateDespesas";
}

<h2>Update Despesas</h2>
<div class="panel">
    <form action="~/Despesas/Update/@Model.Id" method="post">
       

        <div class="form-group">
            <label>Lugar</label>
            <input class="form-control" type="text" id="Lugar" name="Lugar" value="@Model.Lugar" />
        </div>

        <div class="form-group">
            <label>Data</label>
            <input class="form-control" type="text" id="Data" name="Data" value="@Model.Data" />
        </div>

        <div class="form-group">
            <label>Valor</label>
            <input class="form-control" type="text" id="Valor" name="Valor" value="@Model.Valor" />
        </div>

        <div class="form-group">
            <label>Tipo</label>
            <select class="form-control" id="SelectedUserRoleId" name="Tipo.IdTipo">

                <option value="@Model.Tipo.IdTipo">@Model.Tipo.Nome</option>
                @foreach (Finanças_Pessoais.Models.Tipo item in @ViewBag.ListTipo)
                {
                    <option value="@item.IdTipo">@item.Nome</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-default">Atualizar Despesa</button>
    </form>
</div>